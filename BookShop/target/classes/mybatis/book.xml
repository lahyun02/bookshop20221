<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="book">  
	<select id="total" resultType="Integer">
		SELECT COUNT(*) FROM book
	</select>

	<select id="list" resultType="Book"> 
		SELECT * FROM
		  (SELECT T1.*, ROWNUM rnum FROM 
		  (SELECT * FROM book ORDER BY bookid) T1)
		WHERE rnum BETWEEN ((#{page} - 1) * #{perPage} + 1) AND (#{page} * #{perPage})
	</select>
	
	<insert id="add">
		INSERT INTO book
		VALUES (#{bookid}, #{bookname}, #{publisher}, #{price})
	</insert>
	<!-- 파라미터타입을 안써도 되는 이유: myBatis는 getter만 호출.  -->
	<!-- resultType :DB의 데이터를 자바(객체)에 넘겨주기 위해 이름 지정. (setter) -->
	
	<update id="update">
		UPDATE book
		SET bookname=#{bookname}, publisher=#{publisher}, price=#{price}
		WHERE bookid=#{bookid}
	</update>
	
	<delete id="delete">
		DELETE FROM book
		WHERE bookid=#{bookid}
	</delete>
	
	<select id="item" resultType="Book">
		SELECT * FROM book
		WHERE bookid=#{bookid}
	</select>
</mapper>

